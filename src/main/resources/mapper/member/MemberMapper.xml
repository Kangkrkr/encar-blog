<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

	<resultMap type="Member" id="memberWithAuths">
		<id property="memberId" column="member_id"/>
		<result property="account" column="account"/>
		<result property="email" column="email"/>
		<result property="profilePic" column="profile_pic"/>
		<collection property="auths"
					column="member_id" 
					javaType="java.util.ArrayList" 
					ofType="Auth" 
					select="selectAuthListByMemberId">
		</collection>
	</resultMap>
	
	<resultMap type="Member" id="member">
		<id property="memberId" column="member_id"/>
		<result property="account" column="account"/>
		<result property="email" column="email"/>
		<result property="profilePic" column="profile_pic"/>
	</resultMap>
	
	<select id="selectMember" resultType="Member">
		SELECT * FROM MEMBER
	</select>
	
	<!-- resultMap="memberWithAuths" -->
	<select id="selectMemberWithAccount" parameterType="java.lang.String" resultMap="member">
		SELECT * FROM MEMBER WHERE ACCOUNT = #{account}
	</select>
	
	<select id="selectMemberWithAccount2" resultType="Member">
		SELECT * FROM MEMBER WHERE ACCOUNT = 'kangkrkr'
	</select>
	
	<select id="selectAuthListByMemberId" parameterType="java.lang.Integer" resultType="Auth">
		SELECT A.AUTH_ID, A.AUTH_NAME 
		FROM AUTH A
		WHERE A.AUTH_ID
		IN (
			SELECT MA.MA_AUTH_ID
		 	FROM MEMBER_AUTH MA
		 	WHERE MA.MA_MEMBER_ID = #{memberId}
		)
	</select>
</mapper>